            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" />
                </DataTemplate>
            </FlipView.ItemTemplate>
            <Image Source="Assets/D.jpg" />
            <Image Source="Assets/G.png" />
            <Image Source="Assets/A2.jpg" />
            <Image Source="Assets/Bm.jpg" />
        
        <Button x:Name="recordButton" HorizontalAlignment="Left"  Background="#FF1EAAF9" Height="90" Margin="270,232,0,0" VerticalAlignment="Top" Width="90">
            <Image Source="assets/arrow.png"/>
        </Button>
        
        
        </-->

    </Grid>
</Page>


